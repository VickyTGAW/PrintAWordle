@{
    ViewBag.Title = "Print-A-Wordle STL Generator";
}

<h1>Print-A-Wordle STL Generator</h1>
<p>Paste your Wordle result and download an STL file for 3D Printing!</p>
<br />
<br />

@using (Html.BeginForm())
{
    <strong>Height of Each Color Tile Section</strong>
    <a class="btn btn-primary" data-toggle="modal" data-target="#heightHelp">?</a>
    <br />
    <select name="ColorHeight">
        <option value="0.3" selected>0.3 (three layers at 0.1mm)</option>
        <option value="0.4">0.40</option>
        <option value="0.6">0.60</option>
        <option value="0.75">0.75</option>
        <option value="1">1.00</option>
    </select>
    @Html.Partial("_HeightHelp");

    <br />
    <br />
    <strong>Model Type:</strong> <a class="btn btn-primary" data-toggle="modal" data-target="#modelTypeHelp">?</a>
    <br />
    <select name="ModelMode">
        <option value="Earring">Earring</option>
        <option value="Pendant">Pendant</option>
        <option value="Magnet">Magnet / Tile</option>
    </select>
    @Html.Partial("_ModelTypeHelp");

    <br />
    <br />
    <input type="checkbox" name="IncludeUnusedGuesses" checked="checked" /><strong>Include Unused Guesses</strong>
    <a class="btn btn-primary" data-toggle="modal" data-target="#unusedGuessHelp">?</a>
    <br />
    @Html.Partial("_UnusedGuessHelp");
    <br />
    <br />
    <strong>Wordle Result</strong> <a class="btn btn-primary" data-toggle="modal" data-target="#wordleResultHelp">?</a>
    @Html.Partial("_WordleResultHelp");
    <br />
    @Html.TextArea("WordleResult", new { rows = 6, required="true" })
    <br />
    <br />

    <input type="submit" value="Download 3D Model" />
}
<font color="red">@ViewBag.Message</font>
