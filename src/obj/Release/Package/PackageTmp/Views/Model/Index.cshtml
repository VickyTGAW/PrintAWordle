@{
    ViewBag.Title = "Home Page";
}

<h1>Print-A-Wordle STL Generator</h1>
<p>Paste your Wordle result and download an STL file for 3D Printing!</p>
<br/><br/>

@using (Html.BeginForm())
{
<strong>Height of Each Color Tile Section</strong><br/>
<em>This model assumes you will be switching colors at specific layer heights of your print. 
    For example if you are printing a pendant and you select "0.3", then you print your backing from 0 - 2mm, 
    your grey tiles from 2.0 - 2.3mm, your yellow tiles from 2.3mm - 2.6mm and then finally your green tiles from 2.6 - 2.9mm </em><br/>
<select name="ColorHeight">
    <option value="0.3" selected>0.3 (three layers at 0.1mm)</option>
    <option value="0.6">0.6</option>
    <option value="0.75">0.75</option>
    <option value="1">1</option>
</select><br/><br/>
<strong>Model Type:</strong><br/>
<select name="ModelMode">
    <option value="Earring">Earring</option>
    <option value="Pendant">Pendant</option>
    <option value="Magnet">Magnet / Tile</option>
</select><br/><br/>
<input type="checkbox" name="IncludeUnusedGuesses" checked="checked"/><strong>Include Unused Guesses</strong><br/><br/>
<strong>Wordle Result</strong><br/>
@Html.TextArea("WordleResult", new { rows=6  })<br/><br/>

<input type="submit" value="Download 3D Model" />
}
<font color="red">@ViewBag.Message</font>
